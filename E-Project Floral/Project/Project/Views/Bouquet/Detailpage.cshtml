            }

            #cnt>.row>.col-xs-12.col-sm-5 {
                padding-right: 0;
            }

            #cnt>.row>.col-xs-12.col-sm-9>div>p {
                padding-left: 0 !important;
                padding-right: 0 !important;
            }

            #cnt>.row>.col-xs-12.col-sm-9>div>ul {
                padding-left: 0 !important;

            }

            #sc {
                width: 104%;
            }

            .menu-items {
                padding-left: 0;
            }
        }

        .center-content {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin-top: 50px;
        }
    </style>
</head>



    
    
   
    <div class="center-content">
        <div class="row">
      
            <div class="container" id="cnt">
                <div class="row">
                  
                    <div class="col-xs-4 item-photo">
                        <img style="width:100%; height:400px;" src="~/images/@Model.image" />
                    </div>

                    <div class="col-xs-5" style="border:0px solid gray">
                        <!-- Datos del vendedor y titulo del producto -->
                        <h3>@Model.name</h3>


                        <!-- Precios -->
                        <h6 class="title-price"><small>Price</small></h6>
                        <h3 style="margin-top:0px;">@Model.price/Rs</h3>
                        
                        
                        
                        <form action="@Url.Action("addtocart","Bouquet")" method="POST">
                            
                            <div class="section" id="sc" style="padding-bottom:20px;">
                                <h6 class="title-attr"><small>Order Quantity</small></h6>
                                <div>
                                    <div class="btn-minus"><span class="glyphicon glyphicon-minus"></span></div>
                                    <input value="1" name="qty"/>
                                    <div class="btn-plus"><span class="glyphicon glyphicon-plus"></span></div>
                                </div>
                            </div>
                            <input type="hidden" name="id" value="@Model.id">
                            <input type="hidden" name="price" value="@Model.price">
                            <input type="hidden" name="name" value="@Model.name">
                            <input type="hidden" name="image" value="/images/@Model.image">
                            
                            <!-- Botones de compra -->
                            <div class="section" id="sc" style="padding-bottom:20px;">
                                <span style="margin-right:20px" class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span><button class="btn btn-success">Add To Cart</button>
                                
                            </div>
                        </form>
                    </div>


                </div>
